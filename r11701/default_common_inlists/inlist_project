&binary_job

   inlist_names(1) = 'inlist1'
   inlist_names(2) = 'inlist2'

   evolve_both_stars = .true.

/ ! end of binary_job namelist

&binary_controls
   photo_interval = 0 !MANOS MAR20
   ! be 100% sure MB is always off
   do_jdot_mb = .false.
   do_jdot_missing_wind = .true.
   do_j_accretion = .true. !MANOS MAR20

   mdot_scheme = "contact" !MANOS this will change to Kolb after one of the two stars will reach TAMS

   ! Mass transfer efficiency controls
     mass_transfer_alpha = 0d0      ! fraction of mass lost from the vicinity of donor as fast wind
     mass_transfer_beta = 0d0       ! fraction of mass lost from the vicinity of accretor as fast wind
     mass_transfer_delta = 0d0      ! fraction of mass lost from circumbinary coplanar toroid
   ! limit_retention_by_mdot_edd = .true.     ! Use Eddington accretion rate !MANOS: important for projects with MT onto compact objects

   history_interval = 1
   terminal_interval = 10
   write_header_frequency = 100

   ! initial conditions specified in extra inlist
   read_extra_binary_controls_inlist1 = .true.
   extra_binary_controls_inlist1_name = "inlist_extra"

   ! timestep controls
   fr = 0.1
   fr_limit = 1d-1
   fr_dt_limit = 500
   fm = 0.05
   fm_limit = 0.1d0
   varcontrol_case_a = 2d-1
   varcontrol_case_b = 1d-1
   varcontrol_ms = 1d-1
   varcontrol_post_ms = 1d-1
   dt_softening_factor = 0.4

   limit_retention_by_mdot_edd = .false.
   implicit_scheme_tolerance = 1d-4
   max_tries_to_achieve = 200
   min_change_factor = 1.01d0
   max_change_factor = 1.2d0
   initial_change_factor = 1.2d0
   change_factor_fraction = 0.8d0
   implicit_lambda = 0.4d0

   min_mdot_for_implicit = 1d-9
   roche_min_mdot = 1d-10
   ! assume merger or CE if mass transfer rate becomes too high
   !max_implicit_abs_mdot = 1.0 !1.0d3 implemented in run_binary_extras.f
   accretor_overflow_terminate = 100
   terminate_if_L2_overflow = .false. !MANOS DEC19. L2 checked is changed between Pabpl's and Devina's in from case A to case B respectively in run_binary_extras.f


   do_tidal_sync = .true. ! tides are on
   do_initial_orbit_sync_1 = .true. ! equal initial orbital and stellar spin period !MANOS MAR20
   do_initial_orbit_sync_2 = .true. ! equal initial orbital and stellar spin period !MANOS MAR20

   use_other_sync_spin_to_orbit = .true. !we decide where to apply the tides, only to the envelope. Calls the tidal timescale calculation
   use_other_tsync = .true. !tidal timescale calculation

   !sync_type_1 = "Hut_rad"
   sync_type_1 = "structure_dependent" ! MANOS: if "structure_dependent" then it checks if the core is radiative or not and uses Hut_conv or Hut_rad respectively (the word in Hut refers to the envelope state).

   !sync_type_2 = "Hut_rad"
   sync_type_2 = "structure_dependent" ! MANOS: if "structure_dependent" then it checks if the core is radiative or not and uses Hut_conv or Hut_rad respectively (the word in Hut refers to the envelope state).

/ ! end of binary_controls namelist
